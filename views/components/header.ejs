<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Socket.io -->
    <script src="/socket.io/socket.io.js"></script>
    
</head>

<body>


    <!-- Universal Header seen when logged in -->
    <nav id="globalHeader" class="navbar fixed-top navbar-expand-lg navbar-dark" style="background-color: #2D9CDB">

        
        <!-- Logo -->
        <a class="navbar-brand px-1" href="/">
            <img src="/public/images/P_logo.png">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto px-3">
            
                <!-- Search Users -->
                <form class="form-inline" autocomplete="off" action="/usersearchresults" method="get">
                    <div class = "ui-widget">
                        <input class="form-control mr-sm-2" style="width:210px" type="search" placeholder="Search for users!" aria-label="Search" id="userSearchTerm" name="searchTerm">
                    </div>
                    <button style="display:none" type="submit">Search</button>
                </form>
                
                <!-- Search News-->
                <form class="form-inline" autocomplete="off" action="/newssearchresults" method="get">
                    <div class = "ui-widget">
                        <input class="form-control mr-sm-2" style="width:360px" type="search" placeholder="Search for news!" aria-label="Search" id="newsSearchTerm" name="searchTerm">
                    </div>
                    <button style="display:none" type="submit">Search</button>
                </form>

            </ul>
            

            <ul class="navbar-nav topnav-right">

                <!-- Chat Bell -->
                <div class="dropdown">
                    <a class="navbar-brand px-2 dropdown-toggle" data-toggle="dropdown" style="cursor: pointer">
                        <img src="/public/images/bell.png" height=30px>
                        <ul id="chat-invite-list" class="dropdown-menu dropdown-menu-right"></ul>
                    </a>
                </div>

            </ul>

            <ul class="navbar-nav">
                <!-- Home -->
                <li id="home-nav-btn" class="nav-item px-2">
                    <a class="nav-link" style="font-size:larger" href="/">Home</a>
                </li>

                <!-- Visualizer -->
                <li id="visualizer-nav-btn" class="nav-item px-2">
                    <a class="nav-link" style="font-size:larger" href="/visualizer">Visualizer</a>
                </li>

                <!-- My Profile -->
                <li id="profile-nav-btn" class="nav-item px-2">
                    <a class="nav-link" style="font-size:larger" href="/profile">My Profile</a>
                </li>
            </ul>

            <ul class="navbar-nav">
                <!-- Settings -->
                <a class="navbar-brand px-2" href="/settings">
                    <img src="/public/images/settings.png" height=30px>
                </a>

                <!-- Logout -->
                <a class="navbar-brand px-2" id="logout-button" style="cursor: pointer">
                    <img src="/public/images/logout.png" height=30px>
                </a>
            </ul>
        </div>
    </nav>

    <!-- Only seen when not logged in (on viewing other profiles) -->
    <nav id="guestHeader" class="navbar fixed-top navbar-expand-lg navbar-dark" style="background-color: #2D9CDB">
        <!-- Logo -->
        <a class="navbar-brand px-1" href="/">
            <img src="/public/images/P_logo.png">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto"></ul>
            <ul class="navbar-nav topnav-right">
                <!-- Login -->
                <li class="nav-item active px-1">
                    <a class="nav-link" style="font-size:larger" href="/login">Login</a>
                </li>
            </ul>
        </div>
    </nav>
    
  
    


</body>
</html>