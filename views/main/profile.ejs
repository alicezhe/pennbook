<!DOCTYPE html>
<html>
<!-- My Profile Page -->
<head>
    <title>My Profile</title>
    <link rel="icon" type="image/png" href="/public/images/pennbooklogo.png">
    
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <!-- jQuery CDN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- jQuery UI -->
    <link rel="stylesheet" href="/public/css/jquery-ui.min.css">
    <script src="/public/js/jquery-ui.min.js"></script>

    <!-- Script for header -->
    <script src="/public/js/components/header.js"></script>

    <!-- Custom CSS/js -->
    <script src="/public/js/main/profile.js"></script>
    <link rel="stylesheet" type="text/css" href="/public/css/main/main.css">

    <!-- Script for displaying feed -->
    <script src="/public/js/components/feed.js"></script>

    <!-- Socket.io -->
    <script src="/socket.io/socket.io.js"></script>

    <!-- Active User Script -->
    <script src="/public/js/main/online.js"></script>
    
    <!-- Moment.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
</head>

<body>
    <div class="container-fluid three-col-container">
        <div class="row">
            <div class="col-md-3">
                <div class="section" id="about-section">
                    <h1 id="fullname"></h1>
                    <img id="profile-pic" src="/public/images/defaultprofilepic.png">
                    <dl>
                        <dt><h2>About</h2></dt>
                        <dt>Username</dt>
                        <dd id="username"></dd>
                        <dt>Birthday</dt>
                        <dd id="birthday"></dd>
                        <dt>Interests</dt>
                        <span id="interests"></span>
                        <dt>Affiliation</dt>
                        <dd id="affiliation"></dd>
                    </dl>
                    <form id="edit-profile-form">
                        <input type="submit" value="Edit Profile" id="edit-profile" class="btn btn-primary">
                    </form>
                </div>
            </div>
            <div class="col-md-6 middle-column">
                <div class="section" id="post-section">
                    <div id="add-post-section" class="border border-secondary">
                        <h3>What's on your mind?</h3>
                        <form role="form" id="add-post-form">
                            <div class="form-group" id="input-container">
                                <textarea type="text" class="form-control" id="new-post-content" rows="4" placeholder="Say something...">
                                </textarea>
                                <button type="submit" class="btn btn-primary" id="submit-post-btn">
                                    Post
                                </button>
                            </div>
                        </form>
                    </div>
                    <div id="wall-post-section">
                        <!-- wall posts-->
                    </div>
                    <div id='all-posts-shown' style="display:none">
                        <small class="text-muted ml-2">All posts shown!</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="section" id="friends-section">
                    <div class="row border border-secondary" id="friend-requests">
                        <div class="col-md-12">
                            <h3>
                                Friend Requests
                            </h3>
                            <ul id="friend-requests-list" class="list-group list-group-flush"></ul>
                        </div>
                    </div>
                    <div class="row border border-secondary" id="friends">
                        <div class="col-md-12">
                            <h3>
                                Friends
                            </h3>
                            <ul id="friends-list" class="list-group list-group-flush"></ul>
                        </div>
                    </div>
                    <form id="add-friend-form" class="form-inline" method='post'>
                        <p><input type="text" name='username' class="form-control mr-sm-3" placeholder="Add friend by username" id="add-friend-text"></p>
                        <p><input type="submit" class="btn btn-outline-primary btn-block" value='Send'></p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Extra Bootstrap Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
</body>
</html>